#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout<<"enter no\n";
    cin>>n;

    cout<<"perfect no are:\n";
    for(int i=1;i<n;i++)
    {
           int sum=0;
           for(int j=1;j<i;j++)
           {
               if(i%j==0)
               sum+=j;
           }
           if(sum==i)
           {

               cout<<i<<" ";
           }
    }
    cout<<endl;
    return 0;
}
